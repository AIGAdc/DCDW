---
layout: 
---

[
  {% for event in site.events %}
    {
      "title"    : "{{ event.title | escape }}",
      "category" : "{{ event.category }}",
      "tags"     : "{{ event.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ event.url }}",
      "date"     : "{{ event.date }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]